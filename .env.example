# Backend Configuration
FASTAPI_ENV=development
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
API_ROOT_PATH=/api/v1

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=va_scheduler
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_in_production

# Redis / Celery
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# OpenAI / LLM
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# Gmail OAuth2
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/auth/gmail/callback
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.modify

# Outlook OAuth2 (Future)
OUTLOOK_CLIENT_ID=your-client-id
OUTLOOK_CLIENT_SECRET=your-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:8000/api/v1/auth/outlook/callback

# Encryption
ENCRYPTION_KEY=your-fernet-key-here
SECRET_KEY=your-secret-key-for-jwt

# AWS / S3 Compatible (DigitalOcean Spaces)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=va-scheduler
AWS_S3_REGION=nyc3
AWS_S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456
SENTRY_ENVIRONMENT=development

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_NAME=VA Scheduler
